#!/bin/sh
# Pre-push hook for Flutter Boilerplate
# This hook runs tests before pushing to ensure code quality

echo "🚀 Running pre-push checks..."

# Run all tests
echo "🧪 Running tests..."
if ! make test; then
    echo "❌ Tests failed. Please fix the issues before pushing."
    exit 1
fi

echo "✅ Pre-push checks passed!"
